@page "/useroverview"
<PageTitle>User Overview</PageTitle>

<h2>Users Overview</h2>

@if(Users is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-light">
        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Mail Adress</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.MailAdress</td>
                </tr>
            }
        </tbody>
    </table>
}